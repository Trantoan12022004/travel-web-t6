// =========================================================
// DATABASE PROVIDER
// =========================================================
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// =========================================================
// ENUM TYPES (Mapping PostgreSQL ENUM)
// =========================================================

enum UserRole {
  USER
  ADMIN
  @@map("user_role")
}

enum TourStatus {
  ACTIVE
  INACTIVE
  @@map("tour_status")
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
  @@map("booking_status")
}

enum BookingPaymentStatus {
  UNPAID
  PAID
  REFUNDED
  @@map("booking_payment_status")
}

enum PaymentTxStatus {
  PENDING
  SUCCESS
  FAILED
  @@map("payment_tx_status")
}

enum ReviewStatus {
  VISIBLE
  HIDDEN
  @@map("review_status")
}

// =========================================================
// MODEL: USER
// =========================================================

model User {
  userId        String          @id @default(uuid()) @map("user_id")
  userName      String          @db.VarChar(100)
  firstName     String          @db.VarChar(100)
  lastName      String          @db.VarChar(100)
  email         String          @unique @db.VarChar(255)
  passwordHash  String          @map("password_hash") @db.VarChar(255)
  role          UserRole        @default(USER)
  createdAt     DateTime        @default(now()) @map("created_at")
  updatedAt     DateTime        @updatedAt @map("updated_at")

  // Relations
  refreshTokens RefreshToken[]
  bookings      Booking[]
  reviews       Review[]

  @@map("users")
}

// =========================================================
// MODEL: REFRESH TOKEN
// =========================================================

model RefreshToken {
  id         String   @id @default(uuid())
  userId     String   @map("user_id")
  token      String   @unique @db.Text
  expiresAt  DateTime @map("expires_at")
  createdAt  DateTime @default(now()) @map("created_at")

  // Relations
  user User @relation(fields: [userId], references: [userId], onDelete: Cascade)

  @@index([userId])
  @@map("refresh_tokens")
}

// =========================================================
// MODEL: TOUR CATEGORY
// =========================================================

model TourCategory {
  categoryId  Int     @id @default(autoincrement()) @map("category_id")
  name        String  @unique @db.VarChar(100)
  description String? @db.Text

  // Relations
  tours Tour[]

  @@map("tour_categories")
}

// =========================================================
// MODEL: TOUR
// =========================================================

model Tour {
  tourId        Int       @id @default(autoincrement()) @map("tour_id")
  title         String    @db.VarChar(255)
  description   String?   @db.Text
  categoryId    Int?      @map("category_id")
  location      String    @db.VarChar(255)
  durationDays  Int       @map("duration_days")
  price         Decimal   @db.Decimal(12, 2)

  coverImage    String?   @map("cover_image") @db.Text
  basicInfo     Json?     @map("basic_info")        // JSONB
  highlightInfo Json?     @map("highlight_info")    // JSONB

  ratingAvg     Decimal   @default(0) @map("rating_avg") @db.Decimal(3,2)
  ratingCount   Int       @default(0) @map("rating_count")
  status        TourStatus @default(ACTIVE)

  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  // Relations
  category   TourCategory? @relation(fields: [categoryId], references: [categoryId], onDelete: SetNull)
  images     TourImage[]
  schedules  TourSchedule[]
  bookings   Booking[]
  reviews    Review[]

  @@index([categoryId])
  @@map("tours")
}

// =========================================================
// MODEL: TOUR IMAGES
// =========================================================

model TourImage {
  imageId   Int    @id @default(autoincrement()) @map("image_id")
  tourId    Int    @map("tour_id")
  imageUrl  String @map("image_url") @db.Text
  isCover   Boolean @default(false) @map("is_cover")

  // Relations
  tour Tour @relation(fields: [tourId], references: [tourId], onDelete: Cascade)

  @@index([tourId])
  @@map("tour_images")
}

// =========================================================
// MODEL: TOUR SCHEDULES
// =========================================================

model TourSchedule {
  scheduleId  Int      @id @default(autoincrement()) @map("schedule_id")
  tourId      Int      @map("tour_id")
  dayNumber   Int      @map("day_number")
  title       String   @db.VarChar(255)
  description String?  @db.Text
  image       String?  @db.Text

  // Relations
  tour Tour @relation(fields: [tourId], references: [tourId], onDelete: Cascade)

  @@index([tourId])
  @@map("tour_schedules")
}

// =========================================================
// MODEL: BOOKINGS
// =========================================================

model Booking {
  bookingId      Int                  @id @default(autoincrement()) @map("booking_id")
  userId         String               @map("user_id")
  tourId         Int                  @map("tour_id")
  startDate      DateTime             @map("start_date")
  adults         Int
  children       Int       @default(0)
  totalPrice     Decimal   @db.Decimal(12, 2) @map("total_price")
  status         BookingStatus        @default(PENDING)
  paymentStatus  BookingPaymentStatus @default(UNPAID) @map("payment_status")
  createdAt      DateTime             @default(now()) @map("created_at")

  // Relations
  user    User @relation(fields: [userId], references: [userId])
  tour    Tour @relation(fields: [tourId], references: [tourId])
  payments Payment[]

  @@index([userId])
  @@index([tourId])
  @@map("bookings")
}

// =========================================================
// MODEL: PAYMENTS
// =========================================================

model Payment {
  paymentId     Int        @id @default(autoincrement()) @map("payment_id")
  bookingId     Int        @map("booking_id")
  amount        Decimal    @db.Decimal(12, 2)
  method        String     @db.VarChar(50)
  transactionId String?    @map("transaction_id") @db.VarChar(255)
  status        PaymentTxStatus @default(PENDING)
  paidAt        DateTime?  @map("paid_at")
  createdAt     DateTime   @default(now()) @map("created_at")

  // Relations
  booking Booking @relation(fields: [bookingId], references: [bookingId], onDelete: Cascade)

  @@index([bookingId])
  @@map("payments")
}

// =========================================================
// MODEL: REVIEWS
// =========================================================

model Review {
  reviewId   Int       @id @default(autoincrement()) @map("review_id")
  userId     String    @map("user_id")
  tourId     Int       @map("tour_id")
  rating     Int
  comment    String?   @db.Text
  status     ReviewStatus @default(VISIBLE)
  createdAt  DateTime     @default(now()) @map("created_at")

  // Relations
  user User @relation(fields: [userId], references: [userId], onDelete: Cascade)
  tour Tour @relation(fields: [tourId], references: [tourId], onDelete: Cascade)

  @@unique([userId, tourId])  // Một người chỉ được review 1 lần / 1 tour
  @@index([tourId])
  @@map("reviews")
}
